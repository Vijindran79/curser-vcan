rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // API Usage - users can only read their own usage, backend functions handle writes
    match /apiUsage/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only backend functions can write
    }
    
    // Customers collection (managed by Stripe extension)
    match /customers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only Stripe extension can write
      
      // Subscriptions subcollection
      match /subscriptions/{subId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only Stripe extension can write
      }
    }
    
    // Shipments - users can only read/write their own
    match /shipments/{shipmentId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Rates cache - publicly readable, only functions can write
    match /ratesCache/{docId} {
      allow read: true;
      allow write: if false; // Only backend functions can write
    }
  }
}
